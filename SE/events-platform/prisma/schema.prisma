generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  relationMode = "prisma"
}

model Event {
  id          Int      @id @default(autoincrement()) // Primary key with auto-increment
  title       String   // Title of the event
  description String?  // Optional description of the event
  location    String   // Location of the event
  startTime   DateTime // Start time of the event
  endTime     DateTime // End time of the event
  createdAt   DateTime @default(now()) // Timestamp when the event was created
  updatedAt   DateTime @updatedAt // Timestamp when the event was last updated
}